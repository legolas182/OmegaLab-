# ============================================
# Configuración de la Aplicación
# ============================================
spring.application.name=plm
server.port=3001
server.servlet.context-path=/

# ============================================
# Configuración de Base de Datos MySQL
# ============================================
spring.datasource.url=jdbc:mysql://localhost:3306/proscience?useSSL=false&serverTimezone=America/Bogota&allowPublicKeyRetrieval=true
spring.datasource.username=root
spring.datasource.password=1234
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver


# ============================================
# Configuración de JPA/Hibernate
# ============================================
spring.jpa.hibernate.ddl-auto=create
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect
spring.jpa.properties.hibernate.use_sql_comments=true




# ============================================
# Configuración de JWT
# ============================================
jwt.secret=default_secret_change_in_production_use_strong_secret_key_min_256_bits
jwt.expiration=86400000
jwt.header=Authorization
jwt.prefix=Bearer 

# ============================================
# Configuración de GROQ api
# ============================================
groq.api.key=${OPENAI_API_KEY:tu_api_key_de_openai_aqui}

# ============================================
# Configuración de Logging
# ============================================
logging.level.root=INFO
logging.level.com.plm.plm=DEBUG
logging.level.org.springframework.security=DEBUG
logging.level.org.hibernate.SQL=DEBUG
logging.level.org.hibernate.type.descriptor.sql.BasicBinder=TRACE





